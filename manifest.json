{
  "manifest_version": 3,
  "name": "VetClaim â€” VA Claim Sync",
  "version": "1.1.0",
  "description": "Syncs your VA.gov disability claim data to VetClaim Services for AI-powered claim insights.",
  "author": "VetClaim Services",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "webRequest"
  ],

  "host_permissions": [
    "https://www.va.gov/*",
    "https://api.va.gov/*",
    "https://vetclaimservices.com/*",
    "https://api.vetclaimservices.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_start",
      "matches": [
        "*://www.va.gov/claim-or-appeal-status/*",
        "*://www.va.gov/track-claims/*"
      ]
    },
    {
      "js": ["auth-bridge.js"],
      "run_at": "document_idle",
      "matches": [
        "*://vetclaimservices.com/*",
        "*://www.vetclaimservices.com/*"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["interceptor.js"],
      "matches": ["*://www.va.gov/*"]
    }
  ]
}
